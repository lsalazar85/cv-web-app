{
  "name": "cv-web-app",
  "author": "Luis Salazar",
  "version": "0.1.0",
  "jest": {
    "moduleNameMapper": {
      "^components/(.*)": "<rootDir>/src/components/$1"
    },
    "collectCoverageFrom": [
      "src/**/components/**/*.{js,jsx}",
      "!src/components/**/index.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text"
    ]
  },
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "lodash": "^4.17.15",
    "node-sass": "^6.0.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-router-dom": "5.3.0",
    "react-scripts": "^4.0.3",
    "react-transition-group": "^4.4.1",
    "styled-components": "^5.1.0",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "scss": "node-sass — watch scss -o css",
    "deploy": "node deploy",
    "prepare": "husky install",
    "lint": "eslint . --max-warnings=0 --no-ignore",
    "prettier": "prettier -w --config .prettierrc.json './**/*.{js,jsx}'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.0",
    "@testing-library/react-hooks": "^7.0.2",
    "babel-eslint": "^7.2.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "jsdom": "^17.0.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^11.1.2",
    "node-sass": "^6.0.1",
    "prettier": "^2.4.0",
    "react-test-renderer": "^17.0.2",
    "sass-loader": "^12.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
